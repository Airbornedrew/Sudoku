<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/cyan"/>
            <stroke android:width="7dp" android:color="@color/black"/>
        </shape>
    </item>


    <item android:bottom="120dp">
        <shape
            android:shape="line">
            <stroke android:width="4dp"/>
        </shape>
    </item>


    <item android:bottom="-120dp">
        <shape
            android:shape="line">
            <stroke android:width="4dp"/>
        </shape>
    </item>


    <item android:left="-120dp">
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape
                android:shape="line">
                <stroke
                    android:width="4dp"/>
            </shape>
        </rotate>
    </item>


    <item android:right="-120dp">
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape
                android:shape="line">
                <stroke
                    android:width="4dp"/>
            </shape>
        </rotate>
    </item>

</layer-list>